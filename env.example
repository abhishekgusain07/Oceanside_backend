# FastAPI Backend Template Environment Variables

# Application Settings
PROJECT_NAME=FastAPI Backend Template
PROJECT_DESCRIPTION="A template FastAPI application with database integration"
VERSION=0.1.0

# API Documentation
API_V1_STR=/api
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# Log Settings
LOG_LEVEL=INFO
JSON_LOGS=false

# Database Settings
# You can use either DATABASE_URL or individual connection parameters
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/fastapi_template
# Individual connection parameters (used if DATABASE_URL is not provided)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fastapi_template
DATABASE_ECHO=false

# Test Database
TEST_POSTGRES_DB=test_fastapi_template

# CrewAI Settings
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_GEMINI_API_KEY_here
DEFAULT_LLM_PROVIDER=google
DEFAULT_LLM_MODEL=gemini-1.5-flash
DEFAULT_LLM_TEMPERATURE=0.7 